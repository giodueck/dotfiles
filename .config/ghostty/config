# Font and theming
font-family = Hack Nerd Font
font-size = 10
adjust-cell-height = 1
adjust-font-baseline = 1
theme = TokyoNight Night
shell-integration-features = no-cursor
cursor-style = block
cursor-invert-fg-bg = true
# Darker background than tn_night to get dimming effect in tmux when leaving a terminal pane
background = 16161e
# Darker more orange tone for yellow, makes warnings and highlighted text in pagers more readable
palette = 3=#f76f00

# Window configurations
window-decoration = false
gtk-titlebar = false
confirm-close-surface = false
resize-overlay = never
mouse-hide-while-typing = true
mouse-scroll-multiplier = 0.2
gtk-single-instance = true

# Keybinds
# Same as Ctrl+W
keybind = ctrl+backspace=text:\x17
# As I'm using tmux I don't need tabs, and these conflict with my Nvim Harpoon bindings
keybind = alt+one=unbind
keybind = alt+two=unbind
keybind = alt+three=unbind
keybind = alt+four=unbind
keybind = alt+five=unbind
keybind = alt+six=unbind
keybind = alt+seven=unbind
keybind = alt+eight=unbind
keybind = alt+nine=unbind
