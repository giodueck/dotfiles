// -*- mode: jsonc -*-
{
    "height": 24, // Waybar height (to be removed for auto height)
    "layer": "top", // Waybar at top layer
    "margin-top": 4,
    "margin-left": 4,
    "margin-bottom": 0,
    "margin-right": 4,
    "spacing": 4, // Gaps between modules
    "modules-left": [
        "hyprland/workspaces",
        "cpu",
        "temperature",
        "power-profiles-daemon",
        "memory",
        "custom/weather"
    ],
    "modules-center": [
        "custom/spotify"
    ],
    "modules-right": [
        "tray",
        "backlight",
        "pulseaudio",
        "bluetooth",
        "network",
        "battery",
        "keyboard-state",
        "clock",
        "clock#clock2",
        "custom/power-menu"
    ],
    "hyprland/workspaces": {
        "format": "{icon}",
        "on-click": "activate",
        "format-icons": {
            "1": "Û∞≤†",
            "2": "Û∞≤¢",
            "3": "Û∞≤§",
            "4": "Û∞≤¶",
            "5": "Û∞≤®",
            "6": "Û∞≤™",
            "7": "Û∞≤¨",
            "8": "Û∞≤Æ",
            "9": "Û∞≤∞",
            "10": "Û∞ø¨",
            "urgent": "ÔÅ™",
            "focused": "ÔÜí",
            "default": "ÔÑë"
        }
    },
    "tray": {
        "spacing": 10
    },
    "clock": {
        "format": "<span color='#bf616a'>Ôê∫ </span>{:%H:%M}"
    },
    "clock#clock2": {
        "format": "<span color='#9d7cd8'>Ôëï </span>{:%a %b %d}",
        "tooltip-format": "<big>{:%B %Y}</big>\n<tt><small>{calendar}</small></tt>"
    },

    "cpu": {
        "interval": 1,
        "format":"Ôãõ {icon0}{icon1}{icon2}{icon3}{icon4}{icon5}{icon6}{icon7}{icon8}{icon9}{icon10}{icon11}",
        "format-icons": [
            "<span color='#69ff94'>‚ñÅ</span>", // green
            "<span color='#2aa9ff'>‚ñÇ</span>", // blue
            "<span color='#f8f8f2'>‚ñÉ</span>", // white
            "<span color='#f8f8f2'>‚ñÑ</span>", // white
            "<span color='#ffffa5'>‚ñÖ</span>", // yellow
            "<span color='#ffffa5'>‚ñÜ</span>", // yellow
            "<span color='#ff9977'>‚ñá</span>", // orange
            "<span color='#dd532e'>‚ñà</span>"  // red
        ],
        "on-click": "htop"
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        "format-critical": "{temperatureC}¬∞C Û∞Ä¶ ",
        "format": "{temperatureC}¬∞C"
    },
    "memory": {
        "interval": 5,
        "format": "ÔÉâ {}%",
        "tooltip": true,
        "tooltip-format":"ÓøÖ {used:0.1f}G\nÔë≤ {swapUsed:0.1f}G",
        "max-length": 10
    },
    "backlight": {
        // "device": "DP-1",
        "scroll-step": 5.0,
        "format": "{icon} {percent}%",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
    },
    "network": {
        "format-wifi": "Û∞ñ©",
        "tooltip-format-wifi": "Û∞ñ© {essid} {signalStrength}%",
        "format-ethernet": "Û∞àÄ",
        "tooltip-format-ethernet": "Û∞àÄ {ipaddr}",
        "on-click": "bash ~/.config/waybar/scripts/rofi-wifi-menu.sh",
        "format-disconnected": "Û∞Ä¶"
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": "Û∞ùü",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "ÔÄ•",
            "headset": "Û∞ãé",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "scroll-step": 5.0,
        "on-click": "pavucontrol"
    },

    "bluetooth": {
        "on-click": "bash ~/.config/waybar/scripts/rofi-bluetooth &",
        "format": "Ôäî {device_alias}",
        "format-disabled": "Û∞Ç≤"
    },

    "battery": {
      // "bat": "BAT0",
      // "adapter": "ADP0",
      "interval": 60,
      "states": {
          "warning": 30,
          "critical": 15
      },
      "max-length": 20,
      "format": "{icon} {capacity}%",
      "format-warning": "{icon} {capacity}%",
      "format-critical": "{icon} {capacity}%",
      "format-charging": "Û∞ÇÑ {capacity}%",
      "format-plugged": "Ôá¶ {capacity}%",
      "format-alt": "{icon} {time}",
      "format-full": "{icon} {capacity}%",
      "format-icons": ["Û∞Å∫", "Û∞Åº", "Û∞Åæ", "Û∞ÇÅ", "Û∞Åπ"]
    },
    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": "ÔÉß",
            "performance": "ÔÉß",
            "balanced": "Û∞óë",
            "power-saver": "Û∞å™"
        }
    },

    // "custom/weather": {
    //   "exec": "python3 ~/.config/waybar/scripts/weather.py",
    //   "restart-interval": 300,
    //   "return-type": "json",
    //   "on-click": "xdg-open https://weather.com/en-IN/weather/today/l/a319796a4173829988d68c4e3a5f90c1b6832667ea7aaa201757a1c887ec667a"
    // },

    "custom/spotify": {
        "exec": "python3 ~/.config/waybar/scripts/mediaplayer.py --player spotify",
        "format": "{} ÔÜº ",
        "return-type": "json",
        "on-click": "playerctl play-pause",
        "on-double-click-right": "playerctl next",
        "on-scroll-down": "playerctl previous"
    },
    "custom/power-menu": {
        "format": "Û∞ê•",
        "on-click": "bash ~/.config/waybar/scripts/power-menu/powermenu.sh"
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": {
            "numlock": "Û∞é†",
            "capslock": "Û∞åé"
        },
        "format-icons": {
            "locked": "Ôëñ",
            "unlocked": "Ôî™"
        }
    }
}

