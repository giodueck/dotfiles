(defwindow wallpaper-clock
  :geometry (
             geometry :x "0%"
             :y "0%"
             :width "320"
             :height "160"
             :anchor "bottom right")
  :stacking "bg"
  :class "wall_clock"
  (clock))

(defpoll lithour :interval "30s" "date +%H")
(defpoll litmin :interval "30s" "date +%M")

(defwidget clock []
  (box :orientation "h" :space-evenly false :class "clock" :halign "center"
    (label :class "content" :text "${lithour}:${litmin}")
    ))
